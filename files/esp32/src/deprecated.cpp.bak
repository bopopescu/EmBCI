class DebugLogger {
    public:
        int level;1
        DebugLogger() {
            level = FATAL;
        }
        ~DebugLogger() {}
        void println(const char* str, int plevel) {
            if (plevel >= level) {
                Serial.println(str);
            }
        }
        void print(const char* str, int plevel) {
            if (plevel >= level) {
                Serial.print(str);
            }
        }
};
